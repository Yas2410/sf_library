{% extends 'base.html.twig' %}
{% block content %}



    <section class="cover">

        <h5>Vous avez recherché le mot : {{ search }}</h5>

        {% for book in books %}
        <div>
            <h1>{{ book.title }}</h1>
            <span> <strong>{{ book.author }}</strong></span>
            <span> <em>{{ book.nbPages }} pages</em></span>
            <p></br> {{ book.resume }}</p>
            <div><a href="{{ path ('book', {'id':book.id}) }}"> - Details - </a></div>
            <div><a class="delete" href="{{ path ('book_delete', {'id':book.id}) }}"> - Supprimer le livre - </a></div>
            <div class="margin"><a class="update" href="{{ path ('book_update', {'id':book.id}) }}"> - Modifier le livre - </a></div>
            {% endfor %}
            <div><a href="{{ path ('books') }}"> - Revenir à la Bibliothèque - </a></div>
        </div>

    </section>

{% endblock %}