
<section class="cover">
    <form action="{{ path('front_book_search') }}" method="GET">
        <input type="search" name="search">
        <input type="submit" value="Rechercher">
    </form>
    {% for book in books %}
    <div>
    <h1>{{ book.title }}</h1>
    <span> <strong>{{ book.author }}</strong></span>
    <span> <em>{{ book.nbPages }} pages</em></span>
    <p></br> {{ book.resume }}</p>
    <div><a href="{{ path ('front_book', {'id':book.id}) }}"> - Details - </a></div>
    {% endfor %}
    </div>
</section>


